/** flex-direction: column; **/

.userinfo {
  display: flex;
  width: 100%;
  height: 120rpx;
  background: #ff7f24;
  align-items: center;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size: 32rpx;
}

.head-view {
  background: #fff;
  border-bottom: 10rpx solid #f0f0f0;
  height: 50rpx;
  font-size: 32rpx;
  padding: 20rpx;
  color: #333;
}

.total-text {
  font-size: 40rpx;
  color: #ff7f24;
  height: 60rpx;
}

.time-text {
  height: 40rpx;
  margin-top: 20rpx;
}

.success-text {
  height: 40rpx;
  margin-top: 20rpx;
}

.img-plus-style {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  width: 100rpx;
  position: absolute;
  top: 200rpx;
  right: 20rpx;
  z-index: 100;
  background: #ff7f24;
  border-radius: 50%;
  color: #fff;
  font-size: 28rpx;
}

.img-style {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  width: 100rpx;
  position: absolute;
  top: 200rpx;
  right: 20rpx;
  opacity: 0;
  color: #fff;
  border-radius: 50%;
  font-size: 28rpx;
}

.img-style-3 {
  background: #CDB38B;
}

.img-style-2 {
  background: #f66;
}

.img-style-1 {
  background: #ff7f24;
}

.top-view {
  border-bottom: 10rpx solid #f4f4f4;
  display: flex;
  align-items: center;
}

.order_view {
  position: absolute;
  top: 180rpx;
  left: 0;
  bottom: 0;
  width: 100%;
}

.left-status-view {
  display: inline-block;
  width: 20%;
  height: 120rpx;
  align-items: center;
  justify-content: center;
  text-align: center;
  margin-top: 20rpx;
  color: #666;
}

.iconfont {
  /* margin-left: 49%; */
  font-size: 40rpx;
  margin-top: 15rpx;
}

.status-text {
  /* margin-left: 10%; */
  font-size: 28rpx;
}

.selected {
  color: #ff7f24;
  border-bottom: 6rpx solid #ff7f24;
}

.orsel {
  color: #ff7f24;
}

.order-item {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  justify-content: space-around;
  border: 20rpx solid #f4f4f4;
  border-radius: 0.8rem;
  padding: 25rpx;
}

.order-no {
  color: gray;
  font-size: 28rpx;
  width: 25%;
  justify-content: left;
  align-items: center;
}

.ct-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: stretch;
  padding: 20rpx;
  border-bottom: 0.9rpx solid #f0f0f0;
}

.order-status {
  flex: 1;
  display: flex;
  flex-direction: row;
  color: #333;
  font-size: 28rpx;
  justify-content: baseline;
  text-align: center;
  align-items: baseline;
}

.order-status-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  color: #333;
  font-size: 28rpx;
  align-items: left;
  justify-content: space-between;
}

.content-view {
  position: absolute;
  top: 150rpx;
  background-color: #f4f4f4;
  left: 0;
  bottom: 0;
  width: 100%;
}

.btn-view {
  display: flex;
  align-items: center;
  width: 100%;
  color: white;
  font-size: 28rpx;
}

.right-arrow {
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: right;
  padding-right: 10rpx;
  color: gainsboro;
}

.cancel_btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 180rpx;
  height: 70rpx;
  margin-right: 20rpx;
  background: #f66;
}

.confirm_btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 70rpx;
  margin-top: 20rpx;
  border-radius: 0.2rem;
  background: #ff7f24;
}

.ct_menu {
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  bottom: 250rpx;
  right: 50rpx;
  z-index: 100;
}

/*mask*/

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

/*content*/

.drawer_box {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #fafafa;
  margin: -150px 50rpx 0 50rpx;
  border-radius: 3px;
}

.drawer_title {
  padding: 5px;
  font: 14px "microsoft yahei";
  text-align: center;
}

.drawer_content {
  height: 210px;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}

.btn_ok {
  padding: 10px;
  font: 20px "microsoft yahei";
  text-align: center;
  border-top: 1px solid #e8e8ea;
  color: #3cc51f;
}

.top {
  padding-top: 3px;
}

.bottom {
  padding-bottom: 3px;
}

.title {
  height: 30px;
  line-height: 30px;
  width: 160rpx;
  text-align: center;
  display: inline-block;
  font: 300 28rpx/30px "microsoft yahei";
}

.input_base {
  border: 2rpx solid #ccc;
  padding-left: 10rpx;
  margin-right: 50rpx;
}

.input_h30 {
  height: 30px;
  line-height: 30px;
}

.input_h60 {
  height: 60px;
}

.input_view {
  font: 12px "microsoft yahei";
  background: #fff;
  color: #000;
  line-height: 30px;
}

input {
  font: 12px "microsoft yahei";
  background: #fff;
  color: #000;
}

radio {
  margin-right: 20px;
}

.grid {
  display: -webkit-box;
  display: box;
}

.col-0 {
  -webkit-box-flex: 0;
  box-flex: 0;
}

.col-1 {
  -webkit-box-flex: 1;
  box-flex: 1;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.sele_text {
  font-size: 28rpx;
  color: #333;
  font-weight: 300;
}

.picker {
  -webkit-box-flex: 1;
  box-flex: 1;
}

.loading {
  width: 100%;
  display: inline-block;
  flex-direction: row;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  text-align: center;
  justify-content: center;
  align-items: center;
}

.loading:before {
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  margin: 10rpx;
  content: '';
  width: 40rpx;
  height: 40rpx;
  background-size: contain;
  animation: rotate 1s linear 0s infinite;
  -webkit-animation: rotate 1s linear 0s infinite;
}

.ct_loading_icon {
  width: 35rpx;
  height: 35rpx;
  display: inline-flex;
  flex-direction: row;
  text-align: center;
  margin-right: 5rpx;
  justify-content: center;
  align-self: center;
  order: 1;
  align-items: center;
  vertical-align: center;
  animation: rotate 2s linear 0s infinite;
  -webkit-animation: rotate 2s linear 0s infinite;
}

.ct_loading_text {
  display: inline-block;
  text-align: center;
  justify-content: center;
  align-self: center;
  order: 2;
  align-items: center;
  vertical-align: center;
}

.refresh-block {
  padding: 15px;
  text-align: center;
}

.loading.complete:before {
  display: none;
}

.search-result {
  flex: auto;
  position: relative;
}

.search-result scroll-view {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  top: 0;
}

.vip_icon {
  width: 40rpx;
  height: 40rpx;
}

.but-lay-view {
  text-align: right;
}

.pay_but {
  border: none;
  height: 75rpx;
  background: #ff7f24;
  color: white;
  font-size: 30rpx;
  margin: 10rpx;
  align-items: right;
}

.show-btn {
  margin-top: 100rpx;
  color: #2c2;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  align-content: center;
  justify-content: center;
  align-items: center;
  top: 35%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  flex-direction: column;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  margin: 0rpx;
  padding: 0rpx;
  font-size: 28rpx;
}

.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}
