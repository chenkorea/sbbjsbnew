<view class="main-view">
  <view class="head-view">
    <view class="titl-1">订单金额（元）</view>
    <view class="titl-2">{{order.service_price}}元</view>
  </view>

  <scroll-view class="content-view" scroll-y="true">
    <view class="order-item">
      <view class="type-view">
        <text class="type-text">服务地址</text>
      </view>
      <view class="type-view">
        <text class="type-text">{{order.service_address}}</text>
      </view>
    </view>
    <view class="order-item">
      <view class="type-view">
        <text class="type-text">服务项目</text>
      </view>
      <view class="type-view">
        <text class="type-text">{{order.service_type}}-{{order.service_item}}</text>
      </view>
    </view>
    <view class="order-item">
      <view class="type-view">
        <text class="type-text">订单号</text>
      </view>
      <view class="type-view">
        <text class="type-text">{{order.order_no}}</text>
      </view>
    </view>
    <view class="order-item">
      <view class="type-view">
        <text class="type-text">订单来源</text>
      </view>
      <view class="type-view">
        <text class="type-text">{{order.dispatching_type}}</text>
      </view>
    </view>
    <view class="order-item">
      <view class="type-view">
        <text class="type-text">支付状态</text>
      </view>
      <view class="type-view">
        <text class="type-text">{{order.pay_status}}</text>
      </view>
    </view>
    <view class="order-item">
      <view class="type-view">
        <text class="type-text">支付方式</text>
      </view>
      <view class="type-view">
        <text class="type-text">{{order.pay_type}}</text>
      </view>
    </view>
    <view class="order-item">
      <view class="type-view">
        <text class="type-text">订单创建时间</text>
      </view>
      <view class="type-view">
        <text class="type-text">{{order.create_time}}</text>
      </view>
    </view>
  </scroll-view>
</view>