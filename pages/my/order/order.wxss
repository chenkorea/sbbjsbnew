.head-view {
  position: relative;
  background: #FF7F24;
  height: 200rpx;
  color: white;
  border-bottom: 20rpx solid #F0F0F0;
  padding: 20rpx;
}


.order-time{
  position: absolute;
  right: 20rpx;
  top: 100rp;
}

.titl-1 {
  font-size: 32rpx;
  height: 100rpx;
}

.titl-2 {
  font-size: 60rpx;
  font-weight: 700;
  height: 100rpx;
}

.title_text {
  width: 100%;
  padding: 10rpx;
  font-size: 30rpx;
  font-weight: 200;
  color: #666666;
  border-bottom: 20rpx solid #F4F4F4;
  margin-top: 10rpx;
}

.info_view {
  padding: 20rpx;
}

.infon_text {
  color: #333333;
  font-size: 30rpx;
  font-weight: 300;
  margin-top: 20rpx;
}

.air_container {
  width: 100%;
  padding: 10rpx;
  background-color: white;
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  padding-top: 10rpx;
}

.mv_item {
  position: relative;
  box-sizing: border-box;
  background-color: white;
  flex: 0 0 25%;
  height: 200rpx;
  width: 200rpx;
  margin-top: 10rpx;
  border: 1px solid #F0F0F0;
}

.mv_pic
{
  width: 100%;
  height: 100%;
}

.pic {
  width: 100%;
  height: 100%;
}


.goods_item {
  padding: 20rpx;
  display: -webkit-box;
  display: box; 
  border-bottom: 1rpx solid #F0F0F0;
}

.goods_pic {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  -webkit-box-flex:0;
  background: #F0F0F0;
  box-flex:0;
}

.goods_content {
  -webkit-box-flex:1;
  box-flex:1;
}

.goods_name {
  font-size: 28rpx;
  color: #333333;
  margin-top: 10rpx;
}

.goods_num {
  width: 200rpx;
  font-size: 28rpx;
  color: #333333;
  margin-top: 10rpx;
}

.null_view {
  border: 10rpx solid #F0F0F0;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.order-item {
  display: flex;
  width: 100%;
  border-bottom: 2rpx solid #F0F0F0;
  align-items: center;
}

.left-time{
  display: flex;
  float: left;
  background: #4EEE94;
  height: 130rpx;
  width: 130rpx;
  border-radius: 50%;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  vertical-align: center;
  margin: 20rpx;
}

.right-area{
  display: block;
  float:right;
  flex: 1;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
}

.right-right-area {
  font-size: 30rpx;
  color: #333333;
}

.right-right-area1 {
  font-size: 24rpx;
  color: #999999;
  margin-top: 20rpx;
}

.no_notice-view{
  display: flex; 
  position: absolute;
  height: 100%;
  width: 100%;
  top: 400rpx;
  justify-content: center;
}